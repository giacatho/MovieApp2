<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="List Movies">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="prefDisplayMoviesAsGrid"
            android:title="Display Movies As Grid">
        </CheckBoxPreference>
    </PreferenceCategory>

    <PreferenceCategory android:title="Movies Details">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="prefShowReview"
            android:title="Show Review">
        </CheckBoxPreference>
    </PreferenceCategory>
</PreferenceScreen>